<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bpbtn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="#22CB88"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bpbtn" />

        <TextView
            android:layout_width="311dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:background="#22CB88"
            android:text=" 게시글 작성 "
            android:textColor="#FFFFFF"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F2EF"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="분실물 게시판" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="습득물 게시판" />

        </RadioGroup>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F2EF">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="81dp"
            android:layout_height="19dp"
            android:text="*게시글 제목"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="21dp" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="208dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="text"
            android:text="제목"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="58dp"
            android:layout_height="21dp"
            android:text="글 키워드"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="51dp" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="209dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="text"
            android:text="키워드"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="40dp" />

        <ImageButton
            android:id="@+id/imagebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F3F2EF"
            app:srcCompat="@drawable/plusbtn"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="87dp" />

        <TextView
            android:id="@+id/placeview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="300dp"
            tools:text="장소" />

        <EditText
            android:id="@+id/placeedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="291dp" />

        <TextView
            android:id="@+id/dateview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="348dp" />

        <EditText
            android:id="@+id/dateedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="336dp" />

        <TextView
            android:id="@+id/thingview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="물건"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="388dp"
            />

        <EditText
            android:id="@+id/thingedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="381dp"
             />

        <TextView
            android:id="@+id/pointview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="특징"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="426dp" />

        <EditText
            android:id="@+id/pointedit"
            android:layout_width="357dp"
            android:layout_height="51dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="445dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*필수입력사항"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="358dp"
            android:layout_height="70dp"
            android:text="[ 앱 이용규칙 ]"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="496dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="169dp"
            android:layout_height="44dp"
            android:background="#22CB88"
            android:text="게시글 작성 완료"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="569dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
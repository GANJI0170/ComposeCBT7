<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2EF"
    android:foregroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="18dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Missing Back"
            android:textAlignment="center"
            android:textColor="#403322"
            android:textSize="45sp"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="51dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="280dp"
            android:layout_height="271dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/searching"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="112dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/idText"
                android:layout_width="210dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#A622CB88"
                android:ems="10"
                android:hint=" 아이디"
                android:inputType="textPersonName"
                android:text=""
                android:textColorHint="#F3F2EF"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="435dp" />

            <EditText
                android:id="@+id/pwText"
                android:layout_width="210dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#A622CB88"
                android:ems="10"
                android:hint=" 비밀번호"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="#403322"
                android:textColorHint="#F3F2EF"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="483dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rgBtn"
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#22CB88"
                android:text="로그인"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="532dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lgBtn"
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#22CB88"
                android:text="회원가입"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="580dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/lostidbtn"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left"
                    android:layout_margin="1dp"
                    android:background="#A622CB88"
                    android:text="아이디찾기"
                    android:textSize="12sp"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="108dp"
                    tools:layout_editor_absoluteY="624dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/lostpsbtn"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:background="#A622CB88"
                    android:text="비밀번호찾기"
                    android:textSize="12sp"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="211dp"
                    tools:layout_editor_absoluteY="624dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
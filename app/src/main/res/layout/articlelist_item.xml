<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120sp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/board_image"
            android:layout_width="80sp"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:src="@drawable/moji"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/board_title"
                        android:layout_width="wrap_content"
                        android:layout_height="0sp"
                        android:layout_weight="1.5"
                        android:layout_margin="3sp"
                        android:text="제목 :"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/board_keyword"
                        android:layout_width="wrap_content"
                        android:layout_height="0sp"
                        android:layout_weight="1"
                        android:layout_margin="3sp"
                        android:text="키워드 :"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/board_id"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginTop="3sp"
                        android:text="작성자 :"/>
                    <TextView
                        android:id="@+id/board_post_date"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginTop="3sp"
                        android:text="작성일자 :" />
                    <TextView
                        android:id="@+id/board_hits"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="3sp"
                        android:text="조회수 :" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnlatouy"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">
                <Button
                    android:id="@+id/articledelete"
                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="삭제"/>
                <Button
                    android:id="@+id/articleretouch"
                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="수정"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/board_Num"
            android:layout_width="0sp"
            android:layout_height="0sp"/>
    </LinearLayout>
</LinearLayout>
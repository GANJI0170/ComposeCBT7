<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TabHost
        android:id="@+id/tabHost1"
        android:layout_width="match_parent"
        android:background="#F3F2EF"
        android:layout_height="0sp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#22CB88">

            </TabWidget>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F2EF"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editkw"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:hint="검색어 입력"
                    android:inputType="textPersonName"
                    android:text="" />

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="검색" />

            </LinearLayout>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:background="#F3F2EF"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/mainboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F3F2EF"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Missing Back"
                        android:textAlignment="center"
                        android:textColor="#403322"
                        android:textSize="45sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:scrollbars="vertical"
                        android:scrollbarFadeDuration="0"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lostboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F3F2EF"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:scrollbars="vertical"
                        android:scrollbarFadeDuration="0">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/foundboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F3F2EF"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:scrollbars="vertical"
                        android:scrollbarFadeDuration="0">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </TabHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#F3F2EF"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnwrite"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="글 작성"/>
        <Button
            android:id="@+id/btnmyarticle"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내 글"/>
        <Button
            android:id="@+id/btnchat"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="채팅"/>
        <Button
            android:id="@+id/btnalarm"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="알림"/>
        <Button
            android:id="@+id/btnprofile"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내 정보"/>

    </LinearLayout>

